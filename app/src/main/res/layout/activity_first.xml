<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".first_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Welcome"
                android:textColor="@color/purple_700"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="To Al Faisal Optics"
                android:textColor="@color/purple_700"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_patient"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_700"
                android:drawableRight="@drawable/add"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Add Person"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/patient_details"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:backgroundTint="@color/purple_700"
                android:drawableRight="@drawable/details"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Person details"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/help"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:backgroundTint="@color/purple_700"
                android:drawableRight="@drawable/help"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="help"
                android:textColor="@color/white"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/logout"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:backgroundTint="@color/purple_700"
                android:drawableRight="@drawable/logout"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="logout"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:drawableLeft="@drawable/logo"
                android:gravity="center"
                android:text="\t\tAl Faisal Optics Lahore"
                android:textColor="@color/purple_700"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="100sp"
                />
        </LinearLayout>


    </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>